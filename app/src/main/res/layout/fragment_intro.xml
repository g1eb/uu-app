<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    tools:context="nl.utrecht.uni.questions.questions.Intro">

    <TextView
        android:id="@+id/tempting_example_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="200px"
        android:gravity="center_horizontal"
        android:paddingLeft="150px"
        android:paddingRight="150px"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333333"
        android:textSize="50dp" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:layout_marginTop="100px"
        android:background="#ffe600"
        android:gravity="center_horizontal"
        android:paddingBottom="50px"
        android:paddingLeft="100px"
        android:paddingRight="100px"
        android:paddingTop="50px"
        android:text="@string/question_placeholder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333333"
        android:textSize="50dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="50px"
        android:src="@drawable/logo1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="50px"
        android:layout_marginLeft="500px"
        android:src="@drawable/logo2" />

    <ImageView
        android:id="@+id/video_still"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="50px"
        android:layout_marginRight="50px"
        android:src="@drawable/video_still" />
</FrameLayout>
