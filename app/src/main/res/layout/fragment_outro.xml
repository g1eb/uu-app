<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    tools:context="nl.utrecht.uni.questions.questions.Outro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="100px"
        android:paddingLeft="150px"
        android:text="@string/outro_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333333"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/outro_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="100px"
        android:paddingRight="150px"
        android:text="@string/step_text1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333333"
        android:textSize="50dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="150px"
        android:paddingRight="150px"
        android:layout_gravity="start|center_vertical">

        <ImageView
            android:id="@+id/instruction_img_1"
            android:layout_width="wrap_content"
            android:layout_height="400px"
            android:layout_gravity="start|top"
            android:gravity="start"
            android:src="@drawable/instruction_img_1"
            android:visibility="invisible"
            android:layout_marginLeft="-300px"/>

        <TextView
            android:id="@+id/instruction_text_1"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:gravity="start"
            android:paddingBottom="50px"
            android:layout_marginRight="100px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#333333"
            android:visibility="invisible"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/instruction_img_2"
            android:layout_width="wrap_content"
            android:layout_height="400px"
            android:layout_gravity="start|top"
            android:gravity="start"
            android:src="@drawable/instruction_img_2"
            android:visibility="invisible"
            android:layout_marginLeft="-300px"/>

        <TextView
            android:id="@+id/instruction_text_2"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:gravity="start"
            android:paddingBottom="50px"
            android:layout_marginRight="100px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#333333"
            android:visibility="invisible"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/instruction_img_3"
            android:layout_width="wrap_content"
            android:layout_height="400px"
            android:layout_gravity="start|top"
            android:gravity="start"
            android:src="@drawable/instruction_img_3"
            android:visibility="invisible"
            android:layout_marginLeft="-300px"/>

        <TextView
            android:id="@+id/instruction_text_3"
            android:layout_width="800px"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:gravity="start"
            android:paddingBottom="50px"
            android:layout_marginRight="100px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#333333"
            android:visibility="invisible"
            android:textSize="30dp" />
    </FrameLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:progress="50"
        android:layout_alignParentBottom="true"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@layout/progress_bar" />

</FrameLayout>