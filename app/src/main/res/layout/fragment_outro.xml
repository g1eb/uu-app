<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eaeaea"
    tools:context="nl.utrecht.uni.questions.questions.Outro">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="200px"
        android:paddingLeft="150px"
        android:paddingRight="150px"
        android:text="@string/outro_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#333333"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center"
        android:orientation="vertical"
        android:paddingLeft="100px"
        android:paddingRight="100px">

        <ImageView
            android:id="@+id/instruction_image"
            android:layout_width="wrap_content"
            android:layout_height="400px"
            android:layout_gravity="start|center"/>

        <TextView
            android:id="@+id/instruction_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:gravity="start"
            android:paddingBottom="50px"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#333333"
            android:textSize="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_back_to_lobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="75px"
        android:layout_marginRight="75px"
        android:background="#ffe600"
        android:gravity="center_horizontal"
        android:paddingBottom="50px"
        android:paddingLeft="100px"
        android:paddingRight="100px"
        android:paddingTop="50px"
        android:text="@string/btn_text_back"
        android:textColor="#333333"
        android:textSize="50dp" />

</FrameLayout>